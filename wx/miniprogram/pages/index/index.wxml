<map
  id="map"
  latitude="{{location.latitude}}"
  longitude="{{location.longitude}}"
  scale="{{scale}}"
  setting="{{setting}}"
  enable-overlooking="{{isOverLooking}}"
  enable-3D="{{is3D}}"
  markers="{{markers}}" 
>
  <cover-view class="icon-container">
    <cover-image wx:if="{{!avatarURL}}" src="/resources/account.png"></cover-image>
    <cover-image wx:if="{{avatarURL}}" class="round" src="{{avatarURL}}"></cover-image>
    <cover-image 
      src="/resources/my_location.png"
      bindtap="onMyLocationTap"
    ></cover-image>
  </cover-view>
  <cover-view class="btn-container bg-grey round" bindtap="onScanClicked">
    <cover-view>扫码租车</cover-view>
  </cover-view>
</map>